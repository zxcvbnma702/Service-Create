<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.servicecreate.ui.home.watch.WatchViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/watch_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:clickable="true"
            android:background="@color/background_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            tools:context=".ui.home.wisdom.WisdomFragment">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/watch_toolbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/white"
                app:navigationIconTint="@color/main_color_primary_secondary"
                app:title="智能手环"
                app:titleCentered="true"
                android:elevation="@dimen/ui_elevation_height"
                app:navigationContentDescription="返回上一级"
                app:navigationIcon="@drawable/ic_outline_navigate_before_24"
                app:titleTextColor="@color/main_color_primary_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/watch_temperature_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/watch_toolbar">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/air_cir_bg"
                    android:layout_width="245dp"
                    android:layout_height="245dp"
                    android:layout_marginTop="65dp"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@color/second_color_variant"
                    android:elevation="@dimen/ui_elevation_height"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/CircleStyle"
                    app:strokeColor="@color/second_color_variant"
                    app:strokeWidth="1dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/watch_cir_progress"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="88dp"
                    android:height="200dp"
                    android:background="@drawable/circle_bg"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:shadowColor="@color/main_color_primary_variant"
                    android:shadowRadius="5"
                    android:text="0"
                    android:textColor="@color/main_color"
                    android:textSize="60sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:textSize="15sp"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/main_color_primary_variant"
                    android:text="@string/watch_power"
                    android:elevation="5dp"
                    app:layout_constraintEnd_toEndOf="@id/watch_cir_progress"
                    app:layout_constraintStart_toStartOf="@id/watch_cir_progress"
                    app:layout_constraintBottom_toBottomOf="@id/watch_cir_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.seosh817.circularseekbar.CircularSeekBar
                    android:id="@+id/watch_cir_progress_inner"
                    android:layout_width="192dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="88dp"
                    android:elevation="5dp"
                    app:circularSeekBar_barStrokeCap="butt"
                    app:circularSeekBar_barWidth="8dp"
                    app:circularSeekBar_dashGap="4"
                    app:circularSeekBar_dashWidth="1"
                    app:circularSeekBar_interactive="false"
                    app:circularSeekBar_max="100"
                    app:circularSeekBar_min="0"
                    app:circularSeekBar_progressGradientColors="@array/rainbow"
                    app:circularSeekBar_startAngle="45"
                    app:circularSeekBar_sweepAngle="360"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_marginStart="40dp"
                android:layout_marginBottom="60dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/watch_steps_text"
                android:textSize="18sp"
                android:textColor="@color/main_color_primary_variant"
                android:text="@string/watch_power"
                android:elevation="5dp"
                app:layout_constraintBottom_toTopOf="@id/watch_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/watch_heart_text"
                android:textSize="18sp"
                android:layout_marginBottom="60dp"
                android:textColor="@color/main_color_primary_variant"
                android:text="@string/watch_power"
                android:elevation="5dp"
                app:layout_constraintBottom_toTopOf="@id/watch_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView

                android:layout_marginStart="40dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/watch_lower_text"
                android:textSize="18sp"
                android:textColor="@color/main_color_primary_variant"
                android:text="@string/watch_power"
                android:elevation="5dp"
                app:layout_constraintBottom_toTopOf="@id/watch_para"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintBottom_toTopOf="@id/watch_para"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/watch_hiper_text"
                android:textSize="18sp"
                android:textColor="@color/main_color_primary_variant"
                android:text="@string/watch_power"
                android:elevation="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <GridLayout
                android:background="@color/white30"
                android:id="@+id/watch_para"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_marginTop="125dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/watch_temperature_show"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch_1_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:elevation="@dimen/ui_elevation_height"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/background_color"
                        app:tint="@color/teal_200"
                        android:src="@drawable/outline_train_24"
                        app:shapeAppearance="@style/RoundedStyle"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp"/>

                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="18sp"
                        android:text="@string/bracelet_card"
                        android:textColor="@color/icon_color"
                        app:layout_constraintTop_toBottomOf="@id/watch_1_icon"
                        android:id="@+id/watch_1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch_2_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:elevation="@dimen/ui_elevation_height"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/background_color"
                        app:tint="@color/teal_700"
                        android:src="@drawable/outline_credit_card_24"
                        app:shapeAppearance="@style/RoundedStyle"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp"/>

                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="18sp"
                        android:text="@string/bracelet_door_card"
                        android:textColor="@color/icon_color"
                        app:layout_constraintTop_toBottomOf="@id/watch_2_icon"
                        android:id="@+id/watch_2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch_3_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:elevation="@dimen/ui_elevation_height"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/background_color"
                        app:tint="@color/teal_500"
                        android:src="@drawable/outline_donut_small_24"
                        app:shapeAppearance="@style/RoundedStyle"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp"/>

                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="18sp"
                        android:text="@string/bracelet_market"
                        android:textColor="@color/icon_color"
                        app:layout_constraintTop_toBottomOf="@id/watch_3_icon"
                        android:id="@+id/watch_3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/watch_4"
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch_4_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:elevation="@dimen/ui_elevation_height"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/background_color"
                        app:tint="@color/icon_heart"
                        android:src="@drawable/baseline_favorite_border_24"
                        app:shapeAppearance="@style/RoundedStyle"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp"/>

                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="18sp"
                        android:text="@string/bracelet_health"
                        android:textColor="@color/icon_color"
                        app:layout_constraintTop_toBottomOf="@id/watch_4_icon"
                        android:id="@+id/watch_4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch_5_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:elevation="@dimen/ui_elevation_height"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/background_color"
                        app:tint="@color/icon_run"
                        android:src="@drawable/outline_directions_run_24"
                        app:shapeAppearance="@style/RoundedStyle"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp"/>

                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="18sp"
                        android:text="@string/bracelet_sports"
                        android:textColor="@color/icon_color"
                        app:layout_constraintTop_toBottomOf="@id/watch_5_icon"
                        android:id="@+id/watch_5_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch_6_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:elevation="@dimen/ui_elevation_height"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/background_color"
                        app:tint="@color/icon_volume"
                        android:src="@drawable/outline_volume_up_24"
                        app:shapeAppearance="@style/RoundedStyle"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp"/>

                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="18sp"
                        android:text="@string/bracelet_notice"
                        android:textColor="@color/icon_color"
                        app:layout_constraintTop_toBottomOf="@id/watch_6_icon"
                        android:id="@+id/watch_66_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch_7_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:elevation="@dimen/ui_elevation_height"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/background_color"
                        app:tint="@color/icon_alarm"
                        android:src="@drawable/baseline_access_alarm_24"
                        app:shapeAppearance="@style/RoundedStyle"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp"/>

                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="18sp"
                        android:text="@string/bracelet_alarm"
                        android:textColor="@color/icon_color"
                        app:layout_constraintTop_toBottomOf="@id/watch_7_icon"
                        android:id="@+id/watch_7_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch_8_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:elevation="@dimen/ui_elevation_height"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/background_color"
                        app:tint="@color/icon_alarm"
                        android:src="@drawable/baseline_cloud_queue_24"
                        app:shapeAppearance="@style/RoundedStyle"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp"/>

                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="18sp"
                        android:text="@string/bracelet_weather"
                        android:textColor="@color/icon_color"
                        app:layout_constraintTop_toBottomOf="@id/watch_8_icon"
                        android:id="@+id/watch_8_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:elevation="10dp"
                    android:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch_9_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:elevation="@dimen/ui_elevation_height"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/background_color"
                        app:tint="@color/main_color_primary_secondary"
                        android:src="@drawable/baseline_help_outline_24"
                        app:shapeAppearance="@style/RoundedStyle"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp"/>

                    <TextView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="18sp"
                        android:text="@string/bracelet_help"
                        android:textColor="@color/icon_color"
                        app:layout_constraintTop_toBottomOf="@id/watch_9_icon"
                        android:id="@+id/watch_9_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</layout>