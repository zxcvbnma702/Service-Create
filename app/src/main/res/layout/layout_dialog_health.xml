<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/watch_health_sleeptime"
        android:textSize="20sp"
        android:textColor="@color/main_color"
        android:text="@string/watch_health_sleeptime"
        android:elevation="5dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/watch_health_sleeptime_text"
        android:textSize="20sp"
        android:textColor="@color/main_color_primary_variant"
        android:text="@string/watch_health_sleeptime"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watch_health_sleeptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart1"
        app:layout_constraintTop_toBottomOf="@id/watch_health_sleeptime_text"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/chart1"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="300dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>